@model Templet.BLL.Models.MailVM
@{
       ViewData["Title"] = "Index";

}

<form asp-controller="Mail" asp-action="SendMail" method="post" >
    <input type="text" asp-for="Title" class="form-control" placeholder="Enter Your Title" />
    <br />
    <textarea asp-for="Message" rows="4" placeholder="Enter Your Message" class="form-control"></textarea>

    <center>
        <input type="submit" class="btn btn-primary" value="Send" />
        <input type="reset" class="btn btn-warning" value="Cansel" />
    </center>

</form>

