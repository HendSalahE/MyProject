@model Templet.BLL.Models.EmployeeVM;
@{
    ViewBag.Title = "Edit Employee";

}

<h2>Edit Employee</h2>


<form asp-controller="Employee" asp-action="Edit" method="post" class="form-group">
    <label asp-for="Name">Employee Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span class="text-danger" asp-validation-for="Name"></span>
    <br /><br />
    <label asp-for="Salary">Employee Salary</label>
    <input type="text" asp-for="Salary" class="form-control" />
    <span class="text-danger" asp-validation-for="Salary"></span>
    <br />

    <label asp-for="Adress">Employee Address</label>
    <input type="text" asp-for="Adress" class="form-control" />
    <span class="text-danger" asp-validation-for="Adress"></span>
    <br />
    <label asp-for="Email">Employee Email</label>
    <input type="email" asp-for="Email" class="form-control" />
    <span class="text-danger" asp-validation-for="Email"></span>
    <br />

    <label asp-for="HireData">Hire Date</label>
    <input type="text" asp-for="HireData" class="form-control" />
    <span class="text-danger" asp-validation-for="HireData"></span>
    <br />

    <label asp-for="Notes">Notes</label>
    <textarea asp-for="Notes" class="form-control" rows="4"></textarea>

    <span class="text-danger" asp-validation-for="Salary"></span>
    <br />

    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive" checked="">
        <label asp-for="IsActive">IsActive</label>
        <span class="text-danger" asp-validation-for="IsActive"></span>


    </div>
    <br />

    <select asp-for="DepartmentID" asp-items="@(SelectList)ViewBag.DepartmentList">
        <option>choose Department</option>
    </select>

    <span class="text-danger" asp-validation-for="DepartmentID"></span>
    <center>
        <input type="submit" value="Edit" class="btn btn-primary" />
    </center>


</form>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
