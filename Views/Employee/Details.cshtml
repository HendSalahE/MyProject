@model Templet.BLL.Models.EmployeeVM;
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Layout/_MainLayout.cshtml";
}




<a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back To Employees</a>


<h2>Employee Details</h2>

<form asp-controller="Employee" asp-action="Details" class="form-group">

    <label asp-for="Name">Employee Name</label>
    <input type="text" asp-for="Name" disabled class="form-control" />
    <br /><br />



    @*<img src="~/Files/IMGs/@item.ImgUrl" width="30" height="30" />
        <br /><br />

        <h3>
            <a href="~/Files/CVs/@item.CvUrl">Download Cv</a>
        </h3>*@






    <label asp-for="Salary">Employee Salary</label>
    <input type="text" asp-for="Salary" disabled class="form-control" />
    <br /><br />

    <label asp-for="Adress">Employee Address</label>
    <input type="text" asp-for="Adress" disabled class="form-control" />
    <br /><br />

    <label asp-for="Email">Employee Email</label>
    <input type="email" asp-for="Email" disabled class="form-control" />
    <br /><br />


    <label asp-for="HireData">Hire Date</label>
    <input type="text" asp-for="HireData" disabled class="form-control" />
    <br /><br />


    <label asp-for="Notes">Notes</label>
    <textarea asp-for="Notes" disabled class="form-control" rows="4"></textarea>
    <br /><br />


    <label asp-for="DepartmentID">Department</label>
    <select asp-for="DepartmentID" disabled asp-items="@(SelectList)ViewBag.DepartmentList">
        <option>Choose Department</option>
    </select>
    <br /><br />

    <div class="custom-control custom-checkbox">
        <input type="checkbox" disabled asp-for="IsActive" class="custom-control-input">
        <label class="custom-control-label" asp-for="IsActive"> Is Active</label>
    </div>

    <br />

</form>

<script src="~/plugins/jquery/jquery.min.js"></script>

<script src="~/plugins/jquery-validation/jquery.validate.js"></script>
<script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
